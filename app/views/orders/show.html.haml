.panel.panel-default
  .panel-heading
    = "Ordreliste"
  .panel-body
    - if @order.present?
      - @order.products.each_with_index do |product, index|
        - if (index-1)%2 == 0
          .row
            .col-xs-6
              = render partial: 'product', locals: {product: product}
        - else
          .col-xs-6
            = render partial: 'product', locals: {product: product}

