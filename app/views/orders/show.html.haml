- if @order.present?
  - @order.products.each do |product|
    %hr
    .row
      .col-xs-2
        = image_tag(product.image_ref, class: product.html_class + " img-thumbnail")
      .col-xs-5
        %h3= product.name
        %p= product.description
        %p= product.price_kr
      .col-xs-3
        = product.count_in_order(@order.id)
      .col-xs-2
        .pull-right= product.total(@order.id)

