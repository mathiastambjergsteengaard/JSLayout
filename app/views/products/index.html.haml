- @products.in_groups_of(4).each do |product_row|
  .row
    - product_row.each do |product|
      - if product.present?
        .col-xs-3
          .product_block
            = link_to product_path(product) do
              = image_tag(product.image_ref || 'salme_37_5_road', class: (product.html_class || 'square') + " img-thumbnail")
            %h2= product.name
            %p= product.description
            %p= product.price
            = link_to new_order_path(id: product.id), class: "add" do
              .btn.btn-primary{data: product.id.to_s, name: product.image_ref || 'salme_37_5_road'}
