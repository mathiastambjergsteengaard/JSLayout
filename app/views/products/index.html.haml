- @products.in_groups_of(4).each do |product_row|
  .row
    - product_row.each do |product|
      - if product.present?
        .col-xs-3
          .product_block
            = image_tag(product.image_ref || 'salme_37_5_road', class: (product.html_class || 'square') + " img-thumbnail")
            %h2= product.name
            %p= product.description
            %p= product.price
            %a.btn.btn-primary{data: product.id.to_s, class: "add", name: product.image_ref || 'salme_37_5_road'}
